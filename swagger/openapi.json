{
  "openapi": "3.0.0",
  "info": {
    "title": "App de juegos",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8086",
      "description": "Documentacion en local"
    }
  ],
  "components": {
    "schemas": {
      "Game": {
        "type": "object",
        "properties": {
          "_id":{
            "type":"string",
            "example":"6397d0203759a4c2a489f6e0"
          },
          "name":{
            "type": "string",
            "example": "Fifa"
          },
          "gender":{
            "type":"string",
            "example":"Deporte"
          }
        }
      },
      "User":{
        "type":"object",
        "properties":{
          "userName":{
            "type":"string",
            "example":"Elvis"
          },
          "password":{
            "type":"string || number",
            "example":"***"
          }
        }
      }
    }
  },
  "paths": {
    "/api/v1/games": {
      "get": {
        "summary": "Retorna una lista de juegos.",
        "tags": [
          "Games"
        ],
        "responses": {
          "200": {
            "description": "Un array de objetos con los juegos disponibles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "$ref": "#/components/schemas/Game"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crea un juego",
        "responses": {
          "201": {
            "description": "Creado exitosamente"
          }
        },
        "tags": [
          "Games"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Game"
              }
            }
          }
        }
      }
    },
    "/api/v1/games/:id": {
      "get": {
        "summary": "Retorna un juego dado un id",
        "tags": [
          "Games"
        ],
        "responses": {
          "200": {
            "description": "Un objeto con los detalles del juego",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref":"#/components/schemas/Game"
                }
              }
            }
          }
        }
      },
      "delete":{
        "summary":"Eliminar juego",
        "tags":["Games"],
        "responses":{
          "200":{
            "description":"Borrado exitosamente"
          }
        }
      }
    },
    "/api/v1/register/create": {
      "post": {
        "summary": "Crear usuario",
        "responses": {
          "201": {
            "description": "Creado correctamente"
          }
        },
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref":"#/components/schemas/User"
              }
            }
          }
        }
      }
    }
  }
}